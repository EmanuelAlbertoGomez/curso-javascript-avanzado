<ul class="d-flex flex-column gap-4 px-4">
    {{#each this}}
        <li class="card shadow-sm rounded overflow-hidden">
            <div class="row g-0">
                <div class="col-md-4 position-relative" style="height: 300px;">
                    <img src="{{urlImagen}}" alt="{{nombre}}" class="img-fluid h-100 w-100" style="object-fit: cover; object-position: center;" loading="lazy">
                </div>
                <div class="col-md-8 d-flex flex-column">
                    <div class="card-body d-flex flex-column flex-grow-1">
                        <div class="d-flex flex-wrap">
                            <h5 class="card-title flex-grow-1 fw-bold text-body">
                                {{nombre}}
                            </h5>
                            <div class="card-subtitle text-lg fw-bold text-muted">
                                {{precio}}
                            </div>
                        </div>
                        <div class="d-flex mt-3 text-sm fw-medium">
                            <div class="d-flex flex-grow-1">
                                <button class="btn btn-primary" type="submit"><i class="bi bi-cart-plus"></i> Add to cart</button>
                            </div>
                        </div>
                        <p class="card-text mt-3 text-muted">
                            {{descripcion}}
                        </p>
                    </div>
                </div>
            </div>
        </li>
    {{/each}}
</ul>